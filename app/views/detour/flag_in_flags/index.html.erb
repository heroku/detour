<h1><%= flaggable_type.capitalize %> flagged-in to <%= feature_name %></h1>

<%= table do %>
  <thead>
    <tr>
      <th></th>
      <th><%= flaggable_class.detour_flaggable_find_by %></th>
    </tr>
  </thead>

  <%= render partial: "flag_in", collection: @flags, as: :flag %>
<% end %>

<%= content_tag :span, "Create a Flag-in", class: "btn btn-default pull-left", data: { toggle: "modal", target: "#create-flag-in" } %>

<%= modal title: "Create a Flag-in", id: "create-flag-in", fade: true do %>
  <%= form_tag request.path, remote: true do |form| %>
    <%= text_field_tag :ids, "", class: "form-control" %>

    <%= modal_footer do %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= submit_tag "Create Flag-in", class: "btn btn-default btn-primary" %>
    <% end %>
  <% end %>
<% end %>

<%= modal title: "Delete Flag-in", id: "delete-flag" do %>
  <p>Are you sure you want to delete <%= feature_name %> flag-in for <%= flaggable_class %> <span class="flaggable-identifier"></span>?</p>

  <%= modal_footer do %>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <%= link_to "Delete Flag-in", "javascript:void(0)", method: :delete, class: "btn btn-danger" %>
  <% end %>
<% end %>
